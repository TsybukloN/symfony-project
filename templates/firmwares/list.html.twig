{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Your Firmwares</h1>

        <a href="{{ path('firmwares_add') }}" class="btn btn-success mb-3">Add New Firmware</a>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Version</th>
                <th>Uploaded At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for firmware in firmwares %}
                <tr>
                    <td>{{ firmware.name }}</td>
                    <td>{{ firmware.version }}</td>
                    <td>{{ firmware.uploadedAt|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('firmwares_edit', {id: firmware.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <a href="{{ path('firmwares_delete', {id: firmware.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
