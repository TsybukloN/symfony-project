{% extends 'base.html.twig' %}

{% block title %}Add Firmware{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card shadow-sm" style="width: 400px;">
            <div class="container mt-5">
                <h1 class="text-center mb-4">Add Firmware</h1>
                <form method="post" action="{{ path('firmwares_add') }}">
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Name</label>
                        <input type="text" id="inputName" name="name" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="inputVersion" class="form-label">Version</label>
                        <input type="text" id="inputVersion" name="version" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Add Firmware</button>
                </form>
                <p class="text-center mt-3">
                    <a href="{{ path('project_list') }}">Back to list</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
